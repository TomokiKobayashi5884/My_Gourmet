<header class="navbar navbar-expand-lg navbar-light sticky-top">
  <%= link_to "My Gourmet", posts_path, class: "navbar-brand logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Togglenavigation" id="hamburger">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">
      <!--ユーザーがサインイン状態の場合-->
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to new_post_path, class: "nav-link" do %>
            <i class="fas fa-plus"></i>&ensp;新規投稿
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to  mypage_my_gourmet_list_users_path, class: "nav-link" do %>
            <i class="fas fa-heart"></i>&ensp;食べたい物リスト
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to mypage_users_path, class: "nav-link" do %>
            <i class="fas fa-user"></i>&ensp;マイページ
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to logout_path, class: "nav-link" do %>
            <i class="fas fa-sign-out-alt"></i>&ensp;ログアウト
          <% end %>
        </li>
      <!--ユーザーがサインアウト状態の場合-->
      <% else %>
        <li class="nav-item">
          <%= link_to "新規投稿", login_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "食べたい物リスト", login_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "ログイン", login_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "新規会員登録", signup_path, class: "nav-link" %>
        </li>
      <% end %>
      
    </ul>
  </div>
</header>

<%= javascript_include_tag "mygourmet/header" %>