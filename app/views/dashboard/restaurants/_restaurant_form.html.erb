<div class="form-group row align-items-center">
  <%= f.label :name, "店名", class: "col-lg-3 col-form-label" %>
  <div class="col-lg-9">
      <%= f.text_field :name, class: "form-control #{"is-invalid" if @restaurant.errors.messages[:name].any? }", id: "name-input" %>
       <!--エラー発生時はエラーメッセージを表示-->
       <% if @restaurant.errors.messages[:name].any? %>
         <span class="invalid-feedback">
           <% @restaurant.errors.full_messages_for(:name).each do |message| %>
             <stronng><%= message %></stronng><br>
           <% end %>
         </span>
       <% end %>
  </div>
</div>

