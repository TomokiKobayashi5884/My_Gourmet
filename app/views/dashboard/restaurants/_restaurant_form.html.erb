         <% @restaurant.errors.full_messages_for(:large_area_id).each do |message| %>
            <stronng><%= message %></stronng><br>
         <% end %>
      </span>
    <% end %>
 </div>
</div>

<div class="form-group row align-items-center">
    <%= f.label "エリア", class: "col-lg-3 col-form-label" %>
    <div class="col-lg-4 middle_area">
    <!--新規投稿に失敗した場合用-->
    <% if @middle_area_id.present? %>
        <%= f.collection_select :middle_area_id, MiddleArea.where(large_area_id: @large_area_id), :id, :name, { selected: @middle_area_id, include_blank: "選択してください" }, required: "required", class: "form-control #{"is-invalid" if @restaurant.errors.messages[:middle_area_id].any? }" %>
    <% elsif params.has_key?(:post) %>
       <%= render partial: "posts/select_middle_area", locals: { large_area_id: params[:large_area_id], middle_area_id: params[:post][:middle_area_id] } %>
    <% else %>
       <%= render partial: "posts/select_middle_area", locals: { large_area_id: "", middle_area_id: "" } %>
    <% end %>
     <!--エラー発生時はエラーメッセージを表示-->
     <% if @restaurant.errors.messages[:middle_area_id].any? %>
        <span class="invalid-feedback">
           <% @restaurant.errors.full_messages_for(:middle_area_id).each do |message| %>
             <stronng><%= message %></stronng><br>
           <% end %>
        </span>
     <% end %>
  </div>
</div>

