<div class="form-group row align-items-center">
 <%= f.label :large_area_id, "都道府県", class: "col-lg-3 col-form-label" %>
 <div class="col-lg-4">
    <%= f.collection_select :large_area_id, @large_areas, :id, :name, { selected: @large_area_id, include_blank: "選択してください" }, required: "required", class: "form-control #{"is-invalid" if @restaurant.errors.messages[:large_area_id].any? }", id: "large_area_id-input" %>
