<div class="col-lg-10 p-0">
    <h4 class="mb-0 heading">コメント編集</h4>
    
    <hr class="mb-5">
    
    <%= form_with model: @comment, url: dashboard_comment_path, method: :put, local: true do |f| %>
    
      <div class="form-group row align-items-center">
        <%= f.label :content, "コメント内容", class: "col-lg-3 col-form-label" %>
          <div class="col-lg-9">
              <%= f.text_field :content, class: "form-control #{"is-invalid" if @comment.errors.messages[:content].any? }" %>
              <!--エラー発生時はエラーメッセージを表示-->
              <% if @comment.errors.messages[:content].any? %>
                <span class="invalid-feedback">
                  <% @comment.errors.full_messages_for(:content).each do |message| %>
                    <stronng><%= message %></stronng><br>
                  <% end %>
                </span>
              <% end %>
          </div>
      </div>
      
      <div class="form-group mt-4 row justify-content-between px-3">
         <%= f.submit "編集完了", class: "btn btn-danger col-lg-5 my-2" %>
         <%= link_to "キャンセル", dashboard_comments_path, class: "btn btn-light col-lg-5 my-2" %>
      </div>
    <% end %>
</div>