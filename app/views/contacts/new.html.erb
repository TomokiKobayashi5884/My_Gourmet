<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 mb-5">
            <h4 class="my-3 heading">お問い合わせ</h4>
            
            <hr>
            
            <p class="mt-lg-4 mb-lg-5">My Gourmetをご利用いただき、誠にありがとうございます。<br>
                ご意見、お問い合わせは以下のフォームよりお問い合わせください。</p>
            
            <%= form_with model: @contact, url: confirm_contacts_path, method: :post, local: true do |f| %>
                
                <div class="form-group row">
                    <%= f.label :name, "お名前", class: "col-lg-3 col-form-label" %>
                    <div class="col-lg-9">
                      <%= f.text_field :name, class: "form-control #{ "is-invalid" if @contact.errors.messages[:name].present? }",
                        autofocus: "true", required: "required", autocomplete: "name", placeholder: "グルメ太郎" %>
                      <!--エラー発生時はエラーメッセージを表示-->
                      <% if @contact.errors.messages[:name].any? %>
                        <span class="invalid-feedback">
                           <% @contact.errors.full_messages_for(:name).each do |message| %>
                              <stronng><%= message %></stronng><br>
                           <% end %>
                          </span>
                      <% end %>
                    </div>
                </div>
                  
                <div class="form-group row">
                  <%= f.label :email, "メールアドレス", class: "col-lg-3 col-form-label" %>
                    <div class="col-lg-9">
                      <%= f.email_field :email, class: "form-control #{ "is-invalid" if @contact.errors.messages[:email].present? }",
                        required: "required", autocomplete: "email", placeholder: "mygourmet@example.com" %>
                      <!--エラー発生時はエラーメッセージを表示-->
                      <% if @contact.errors.messages[:email].any? %>
                        <span class="invalid-feedback">
                           <% @contact.errors.full_messages_for(:email).each do |message| %>
                             <stronng><%= message %></stronng><br>
                           <% end %>
                        </span>
                      <% end %>
                    </div>
                </div>
                  
                <div class="form-group row">
                  <%= f.label :subject, "件名", class: "col-lg-3 col-form-label" %>
                    <div class="col-lg-9">
                      <%= f.text_field :subject, class: "form-control #{ "is-invalid" if @contact.errors.messages[:subject].present? }",
                        required: "required", placeholder: "" %>
                      <!--エラー発生時はエラーメッセージを表示-->
                      <% if @contact.errors.messages[:subject].any? %>
                        <span class="invalid-feedback">
                           <% @contact.errors.full_messages_for(:subject).each do |message| %>
                             <stronng><%= message %></stronng><br>
                           <% end %>
                        </span>
                      <% end %>
                    </div>
                </div>
              
                <div class="form-group row">
                  <%= f.label :message, "お問い合わせ内容", class: "col-lg-3 col-form-label" %>
                    <div class="col-lg-9">
                      <%= f.text_area :message, class: "form-control #{ "is-invalid" if @contact.errors.messages[:message].present? }",
                        required: "required", placeholder: "", style: "height: 12rem;" %>
                      <!--エラー発生時はエラーメッセージを表示-->
                      <% if @contact.errors.messages[:message].any? %>
                        <span class="invalid-feedback">
                           <% @contact.errors.full_messages_for(:message).each do |message| %>
                             <stronng><%= message %></stronng><br>
                           <% end %>
                        </span>
                      <% end %>
                    </div>
                </div>
              
                <div class="form-group mt-5">
                  <%= f.submit "お問い合わせ内容確認画面へ", class: "btn btn-danger w-100" %>
                </div>
                  
            <% end %> 
        </div>
    </div>
</div>


