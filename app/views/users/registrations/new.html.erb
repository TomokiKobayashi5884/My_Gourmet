<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 mt-5">
      <h4 class="my-3">新規会員登録</h4>
      
      <hr>
      
      <!--新規会員登録用フォーム入力部分-->
        <%= form_for resource, as: resource_name, url: user_registration_path do |f| %>
          
          <div class="form-group row">
            <%= f.label :name, "ユーザー名", class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.text_field :name, class: "form-control #{ "is-invalid" if resource.errors.messages[:name].present? }",
                  autofocus: "true", required: "required", autocomplete: "name", placeholder: "グルメ太郎" %>
                <!--エラー発生時はエラーメッセージを表示-->
                <% if resource.errors.messages[:name].present? %>
                  <span class="app-error-message">
                    <storng><%= resource.errors.full_messages_for(:name).first %></storng>
                  </span>
                <% end %>
              </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.email_field :email, class: "form-control #{ "is-invalid" if resource.errors.messages[:email].present? }",
                  required: "required", autocomplete: "email", placeholder: "mygourmet@example.com" %>
                <!--エラー発生時はエラーメッセージを表示-->
                <% if resource.errors.messages[:email].present? %>
                  <span class="app-error-message">
                    <storng><%= resource.errors.full_messages_for(:email).first %></storng>
                  </span>
                <% end %>
              </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :password, "パスワード", class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password, class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? }",
                  required: "required", placeholder: "" %>
                <!--エラー発生時はエラーメッセージを表示-->
                <% if resource.errors.messages[:password].present? %>
                  <span class="app-error-message">
                    <storng><%= resource.errors.full_messages_for(:password).first %></storng>
                  </span>
                <% end %>
              </div>
          </div>
          
          <div class="form-group row">
            <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 col-form-label" %>
              <div class="col-sm-9">
                <%= f.password_field :password_confirmation, class: "form-control", required: "required", placeholder: "" %>
              </div>
          </div>
          <small>※パスワードは英数字を含む、8文字以上で入力してください。</small>
          
          <div class="form-group mt-5">
            <%= f.submit "新規会員登録", class: "btn btn-danger w-100" %>
          </div>
          
        <% end %>    
    </div>
  </div>
</div>
